<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/cards_header" app:icon="@drawable/baseline_style_24">

        <ListPreference
            app:key="daily_cards"
            app:title="@string/number_title"
            app:useSimpleSummaryProvider="true"
            app:entries="@array/cardsNumber_entries"
            app:entryValues="@array/cardsNumber_values"
            app:defaultValue="2"
            />


        <EditTextPreference
            app:key="daily_cards"
            app:title="@string/number_title"
            app:useSimpleSummaryProvider="true"
            app:inputType="number"
            app:defaultValue="10"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/interface_header">
        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/theme" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/account_header" app:icon="@drawable/baseline_account_circle_24">
        <EditTextPreference
            app:key="name"
            app:title="Alias"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="AÃ±ada su alias"
            />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/help_header">
        <Preference
            app:key="about_us"
            app:title="@string/aboutus_title"
            />
        <Preference
            app:key="contact"
            app:title="@string/contact_title"
            />
    </PreferenceCategory>
</PreferenceScreen>